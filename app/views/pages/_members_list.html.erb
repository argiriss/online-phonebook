<% klass = member.featured? ? "featured" : "" %>
<div class="col-md-4 mb-3">
  <div class="card">
    <img class="card-img-top" src="<%= image_path("profile.png") %>" alt="Card image">
    <div class="card-body">
      <h4 class="card-title <%= "#{klass}" %>"><%= "#{member.full_name}" %></h4>
      <p class="card-text"><%= "#{member.contact_detail.description}" %></p>
      <%= link_to "View contact details", member.contact_detail, class: "btn btn-primary" %>
    </div>
  </div>
</div>
