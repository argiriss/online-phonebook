<p id="notice"><%= notice %></p>

<h1>Contact Details</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th>Telephone</th>
      <th>Mobile</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_details.each do |contact_detail| %>
      <tr>
        <td><%= contact_detail.first_name %></td>
        <td><%= contact_detail.last_name %></td>
        <td><%= contact_detail.description %></td>
        <td><%= contact_detail.telephone %></td>
        <td><%= contact_detail.mobile %></td>
        <td><%= contact_detail.user %></td>
        <td><%= link_to 'Show', contact_detail %></td>
        <td><%= link_to 'Edit', edit_contact_detail_path(contact_detail) %></td>
        <td><%= link_to 'Destroy', contact_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

