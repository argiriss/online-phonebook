<%= form_with(model: contact_detail, local: true) do |form| %>
  <% if contact_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact_detail.errors.count, "error") %> prohibited this contact_detail from being saved:</h2>

      <ul>
      <% contact_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :telephone %>
    <%= form.number_field :telephone %>
  </div>

  <div class="field">
    <%= form.label :mobile %>
    <%= form.number_field :mobile %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.fields_for :addresses do |address_form| %>
      <%= render "address_fields", form: address_form %>
    <% end %>
    <div>
      <%= link_to_add_association "Add Address", form, :addresses %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
