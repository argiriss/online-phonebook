<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <% if logged_in?(:admin) %>
    <%= f.label :featured %>
    <%= f.check_box :featured %>
  <% end %>

  <%= render "user_fields", f: f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Edit password", edit_user_password_path(user) %>

<h3>Cancel account</h3>

<p>Unhappy? <%= button_to "Cancel account", registration_path(user), data: { confirm: "Are you sure?" }, method: :delete %></p>